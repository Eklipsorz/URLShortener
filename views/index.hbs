{{!-- url shortener form --}}
<form method="POST" action="/" class="url-shortener-form" id="url-shortener-form" novalidate>
  <div class="input-group">
    {{!-- form input --}}
    <input type="url" class="form-control url-input" placeholder="請輸入網址" id="url-form-input" name="url" required>
    {{!-- form sumbit button --}}
    <button class=" btn url-input-btn" type="submit" id="url-shortener-form-btn">縮短</button>
    {{!-- invalid message of form --}}
    <div class="invalid-feedback">請輸入網址，格式為http://hostname/path</div>
  </div>

</form>

{{!-- a partition to show a shortened url --}}
{{#if result}}
<div class="mt-3 result-message">
  {{!-- message for showing a shortened URL --}}
  <p id="url-result">Result: {{ result }}</p>
  {{!-- copy button --}}
  <button class="btn" id="copy-btn">Copy</button>
</div>

{{/if}}


<script src="/javascripts/URLShortener.js"></script>
